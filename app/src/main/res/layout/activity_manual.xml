<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".View.ManualActivity">

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/right"
            android:id="@+id/j"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp" android:layout_alignParentEnd="true" android:layout_marginEnd="0dp"/>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/left"
            android:id="@+id/b"
            android:layout_alignParentStart="true" android:layout_marginStart="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"/>
    <TextView
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" android:id="@+id/hibafajta" android:layout_marginTop="9dp"
            android:text="@string/manual"
            android:layout_alignParentEnd="true" android:layout_alignParentStart="true"
            android:textAlignment="center" android:textSize="24sp" android:layout_marginStart="90dp"
            android:layout_marginEnd="92dp" android:textAllCaps="false" android:textStyle="bold"/>
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" android:layout_marginTop="29dp"
            android:layout_below="@+id/hibafajta" android:id="@+id/SW">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/manualText"


                  android:textAlignment="textStart" android:textSize="14sp"/>

    </ScrollView>

</RelativeLayout>
