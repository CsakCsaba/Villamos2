<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.MenuActivity">


    <Button
            android:text="@string/speak2me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/speak2me" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/maponly"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="@string/manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/manual" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/speak2me"
            app:layout_constraintHorizontal_bias="0.501" app:layout_constraintVertical_bias="0.011"/>
    <Button
            android:text="@string/followme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/followme" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.241"/>
    <Button
            android:text="@string/maponly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maponly" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/followme" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="@string/download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/downloadmanager" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/manual"
            app:layout_constraintVertical_bias="0.807"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tramNumber" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/followme" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textAlignment="center" android:textSize="36sp" android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/tramYellow" app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintVertical_bias="0.509"/>
    <Button
            android:text="@string/right"
            android:layout_width="wrap_content"
            android:id="@+id/right" app:layout_constraintStart_toEndOf="@+id/tramNumber"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.059" android:textSize="24sp" android:layout_height="wrap_content"/>
    <Button
            android:text="@string/left"
            android:layout_width="wrap_content"
            android:id="@+id/left"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.059" android:textSize="24sp" android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/tramNumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>
</android.support.constraint.ConstraintLayout>